}

.templatemo_menu_panel{
	overflow: hidden;	
	width: 358px;
	height: 40px;
	background: #440522;
}
.navbar{
  flex: none;
  display: flex;
  background: #440522;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #c82c74;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #c82c74;

}
