.templatemo_container{
	width: 400px;
  height: 565px;
	margin: 0 auto;
	border: 10px solid #f2d9ef;
  background: #f2d9ef bottom right no-repeat;
}

/* top panel */
.templatemo_top_panel {
	overflow: hidden;	
	width: 350px;
	height: 32px;
	padding: 5px 4px;
	background: #c82c74;
	border-bottom: 1px solid #870843;
}

.templatemo_shopping_cart{
	float: right;
	width: 350px;
